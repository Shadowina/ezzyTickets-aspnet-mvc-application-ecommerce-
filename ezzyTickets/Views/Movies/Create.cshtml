@model NewMovieVM
@using ezzyTickets.Data;
@using ezzyTickets.Data.Enums;

@{
    ViewData["Title"] = "Create a new movie";
}

<div class="container py-4">
    <div class="page-header">
        <div>
            <h1 class="page-title">Create a new movie</h1>
            <p class="page-subtitle">Enter the details below to list a new movie.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="d-flex justify-content-center mb-4">
                            <div class="poster-preview">
                                <img id="ImageUrlPreview" src="" alt="Movie poster preview" />
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CinemaId" class="form-label"></label>
                                <select asp-for="CinemaId" class="form-select" asp-items="ViewBag.Cinemas"></select>
                                <span asp-validation-for="CinemaId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ProducerId" class="form-label"></label>
                                <select asp-for="ProducerId" class="form-select" asp-items="ViewBag.Producers"></select>
                                <span asp-validation-for="ProducerId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MovieCategory" class="form-label"></label>
                                <select asp-for="MovieCategory" class="form-select" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                                <span asp-validation-for="MovieCategory" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ActorIds" class="form-label"></label>
                                <select asp-for="ActorIds" class="form-select" asp-items="ViewBag.Actors" multiple></select>
                                <span asp-validation-for="ActorIds" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ImageURL" class="form-label"></label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Show all</a>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-check"></i> Create movie</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const input = document.getElementById("ImageURL");
            const preview = document.getElementById("ImageUrlPreview");

            if (input && preview) {
                const setPreview = () => {
                    preview.src = input.value || "https://placehold.co/320x480?text=Poster";
                };

                setPreview();
                input.addEventListener("input", setPreview);
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}