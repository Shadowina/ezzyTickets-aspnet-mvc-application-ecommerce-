@model Movie

@{
    ViewData["Title"] = "Movie details";
}

<div class="container py-4">
    <div class="page-header">
        <div>
            <h1 class="page-title">@Model.Name</h1>
            <p class="page-subtitle">Comprehensive overview and cast information.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Back to list</a>
            <a class="btn btn-success text-white @((DateTime.Now > Model.EndDate) ? "disabled" : string.Empty)"
               asp-controller="Orders"
               asp-action="AddItemToShoppingCart"
               asp-route-id="@Model.Id">
                <i class="bi bi-cart-plus"></i> Add to cart (@Model.Price.ToString("c"))
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="row g-0">
            <div class="col-lg-4 col-md-5">
                <img src="@Model.ImageURL" class="img-fluid h-100 object-cover rounded-start" alt="@Model.Name">
            </div>
            <div class="col-lg-8 col-md-7">
                <div class="card-body p-4">
                    <p class="text-muted mb-3">@Model.Description</p>

                    <dl class="row g-3">
                        <dt class="col-sm-4 text-muted">Cinema</dt>
                        <dd class="col-sm-8">
                            <a asp-controller="Cinemas" asp-action="Details" asp-route-id="@Model.CinemaId">@Model.Cinema.Name</a>
                        </dd>

                        <dt class="col-sm-4 text-muted">Producer</dt>
                        <dd class="col-sm-8">
                            <a asp-controller="Producers" asp-action="Details" asp-route-id="@Model.ProducerId">@Model.Producer.FullName</a>
                        </dd>

                        <dt class="col-sm-4 text-muted">Category</dt>
                        <dd class="col-sm-8">@Model.MovieCategory</dd>

                        <dt class="col-sm-4 text-muted">Dates</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToString("dd MMM yyyy") – @Model.EndDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4 text-muted">Status</dt>
                        <dd class="col-sm-8">
                            @if (DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndDate)
                            {
                                <span class="badge badge-status text-bg-success">Available</span>
                            }
                            else if (DateTime.Now > Model.EndDate)
                            {
                                <span class="badge badge-status text-bg-danger">Expired</span>
                            }
                            else
                            {
                                <span class="badge badge-status text-bg-primary">Upcoming</span>
                            }
                        </dd>
                    </dl>

                    <hr class="my-4" />

                    <h5 class="mb-3">Cast</h5>
                    <div class="row g-3">
                        @foreach (var actor in Model.Actors_Movies)
                        {
                            <div class="col-6 col-md-4 text-center">
                                <div class="avatar-preview mx-auto mb-2">
                                    <img src="@actor.Actor.ProfilePictureURL" alt="@actor.Actor.FullName" />
                                </div>
                                <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.ActorId">@actor.Actor.FullName</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>