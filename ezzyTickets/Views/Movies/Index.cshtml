@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="container py-4">
    <div class="page-header">
        <div>
            <h1 class="page-title">Movies</h1>
            <p class="page-subtitle">Discover what’s playing right now and what’s coming soon.</p>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-lg-4 col-md-6">
                <div class="card card-entity h-100">
                    <img src="@item.ImageURL" class="card-img-top" alt="@item.Name">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2">@item.Name</h5>
                        <p class="text-muted mb-3">@item.Description</p>

                        <div class="mb-3 small text-muted">
                            <div><span class="fw-semibold text-dark">Cinema:</span> @item.Cinema.Name</div>
                            <div><span class="fw-semibold text-dark">Category:</span> @item.MovieCategory</div>
                            <div><span class="fw-semibold text-dark">Starts:</span> @item.StartDate.ToString("dd MMM yy")</div>
                            <div><span class="fw-semibold text-dark">Ends:</span> @item.EndDate.ToString("dd MMM yy")</div>
                        </div>

                        <div class="mt-auto">
                            <p class="mb-3">
                                @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                {
                                    <span class="badge badge-status text-bg-success">Available</span>
                                }
                                else if (DateTime.Now > item.EndDate)
                                {
                                    <span class="badge badge-status text-bg-danger">Expired</span>
                                }
                                else
                                {
                                    <span class="badge badge-status text-bg-primary">Upcoming</span>
                                }
                            </p>
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-primary flex-fill" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                                <a class="btn btn-success text-white flex-fill @((DateTime.Now > item.EndDate) ? "disabled" : string.Empty)"
                                   asp-controller="Orders"
                                   asp-action="AddItemToShoppingCart"
                                   asp-route-id="@item.Id">
                                    <i class="bi bi-cart-plus"></i> @item.Price.ToString("c")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Movies")