@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}

<div class="container py-4">
    <div class="page-header">
        <div>
            <h1 class="page-title">Add a new actor</h1>
            <p class="page-subtitle">Provide the details below to introduce a new actor to the catalogue.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="d-flex justify-content-center mb-4">
                            <div class="avatar-preview">
                                <img id="ProfilePicturePreview" src="" alt="Actor portrait" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfilePictureURL" class="form-label"></label>
                            <input asp-for="ProfilePictureURL" class="form-control" />
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Bio" class="form-label"></label>
                            <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Show all</a>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-check"></i> Create actor</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const input = document.getElementById("ProfilePictureURL");
            const preview = document.getElementById("ProfilePicturePreview");

            if (input && preview) {
                const setPreview = () => {
                    preview.src = input.value || "https://placehold.co/240x240?text=Preview";
                };

                setPreview();
                input.addEventListener("input", setPreview);
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}