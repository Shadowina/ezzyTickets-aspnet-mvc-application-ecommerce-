@model IEnumerable<Actor>

@{
	ViewData["Title"] = "List of Actors";
}

<div class="container py-4">
	<div class="page-header">
		<div>
			<h1 class="page-title">Actors</h1>
			<p class="page-subtitle">Familiar faces who bring our stories to life.</p>
		</div>
	</div>

	<div class="card table-card shadow-sm">
		<div class="card-body p-0">
			<div class="table-responsive">
				<table class="table table-hover align-middle mb-0">
					<thead>
						<tr class="text-center">
							<th>Portrait</th>
							<th>Name</th>
							<th>Biography</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									<img class="rounded-circle object-cover" src="@item.ProfilePictureURL" alt="@item.FullName" width="72" height="72" />
								</td>
								<td class="fw-semibold">@item.FullName</td>
								<td class="text-muted">@item.Bio</td>
								<td>
									<div class="d-flex gap-2 justify-content-center flex-wrap">
										<a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
										<a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
										<a class="btn btn-sm btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

@await Html.PartialAsync("_CreateItem", "Actors")