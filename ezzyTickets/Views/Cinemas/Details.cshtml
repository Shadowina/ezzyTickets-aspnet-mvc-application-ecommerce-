@model Cinema

@{
    ViewData["Title"] = "Details of the cinema";
}

<div class="container py-4">
    <div class="page-header">
        <div>
            <h1 class="page-title">@Model.Name</h1>
            <p class="page-subtitle">Information about this cinema.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-center mb-4">
                        <div class="avatar-preview">
                            <img id="LogoPreview" src="@Model.Logo" alt="@Model.Name" />
                        </div>
                    </div>

                    <dl class="row g-3 mb-0">
                        <dt class="col-sm-4 text-muted">Logo URL</dt>
                        <dd class="col-sm-8 text-break">@Model.Logo</dd>

                        <dt class="col-sm-4 text-muted">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 text-muted">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
                <div class="card-footer bg-transparent d-flex justify-content-between">
                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Show all</a>
                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i> Edit cinema</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>